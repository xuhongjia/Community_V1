<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#3399CC"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goodspecs_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/drawable_arrow_selector" />

        <TextView
            android:id="@+id/goodspecs_title"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="商品规格"
            android:textColor="#fff"
            android:textSize="16sp" />
    </FrameLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        android:orientation="vertical"
        android:layout_weight="1">
        
        
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="#fff">
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    
                <TextView 
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="价格"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                />
            
            	<CheckBox 
            	android:id="@+id/goodspecs_checkbox1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="118.00"
                android:button="@null"
                android:background="@drawable/goodspecs_checkbox_selector"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_margin="5dp"/>
                    
                </LinearLayout>
                
                
            
            	<LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    
                <TextView 
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="库存"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                />
            
            	<CheckBox 
            	android:id="@+id/goodspecs_checkbox2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="499"
                android:button="@null"
                android:background="@drawable/goodspecs_checkbox_selector"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_margin="5dp"/>
                    
                </LinearLayout>
                

            	
                
            </LinearLayout>

            
          
        </LinearLayout>

    </LinearLayout>


	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
    
	        <Button
            android:id="@+id/goodspecs_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="确定"
            android:textSize="18sp"
            android:textColor="#fff"
            android:background="#FF6C0C"/>/>
	    
	</LinearLayout>

</LinearLayout>