<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#3399CC"
        >
     <ImageView
            android:id="@+id/detail_back"
            android:padding="10dp"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:src="@drawable/pressed_arrow_left"
            />
 
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="商品详情"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:gravity="center"/>
        <ToggleButton
            android:id="@+id/detail_love"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:textOn=""
            android:textOff=""
            android:layout_height="match_parent"
            android:checked="false"
            android:background="@drawable/commodity_toggle_selector"
            android:layout_alignParentRight="true"
            ></ToggleButton>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
   <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
         >

    <android.support.v4.view.ViewPager
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:id="@+id/adsPagerView"
       android:background="@color/btn_green_pressed">
       
      </android.support.v4.view.ViewPager>
        </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可爱的狗 健康有保证"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-9-2 900次浏览"
            android:textSize="16sp"/>
    </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    >
                    <View
                        android:layout_width="0.2dp"
                        android:layout_height="50dp"
                        android:background="#dcdcdc"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:id="@+id/tv_detail_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="100"
                        android:layout_marginRight="10dp"
                        android:drawableTop="@drawable/thumb_up"/>
                    <TextView
                        android:id="@+id/tv_detail_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="100"
                        android:drawableTop="@drawable/thumb_down"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#dcdcdc"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格："
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/tv_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015元"
                android:textColor="#aa1111"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类别："
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/tv_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈士奇"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库存："
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/tv_detail_use_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#dcdcdc"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相关描述："
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/tv_detail_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是一条上等纯种哈士奇"/>
    </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#dcdcdc"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_detail_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已售100份"
            android:layout_marginRight="20dp"/>

        <RatingBar
            android:id="@+id/rtb_detail_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4.5"
            android:stepSize="0.5"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            style="?android:attr/ratingBarStyleSmall"
            />
        <TextView
            android:id="@+id/tv_detail_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4.5分"
            android:layout_marginRight="30dp"
            />
        <TextView
            android:id="@+id/tv_detail_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:text="87人评价"
            android:drawableRight="@drawable/arrow_right"
            />
    </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#dcdcdc"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#dcdcdc"
       />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_detail_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刘先生"/>
                <TextView
                    android:id="@+id/tv_detail_user_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="#85BD4C"
                    android:textColor="#fff"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_detail_user_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13566889574"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_detail_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="加入购物车"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="#fff"
                android:background="@drawable/btn_display_cart"
                android:layout_marginRight="10dp"
                />
            <Button
                android:id="@+id/btn_detail_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="联系卖家"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="#fff"
                android:background="@drawable/btn_display_seller"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>