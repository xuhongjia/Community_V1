<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#3399CC"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/setting_return"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/pressed_arrow_left" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="46dp"
            android:text="设置"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp"
            android:text="消息提醒"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/mes_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_privacysetting_switch"
            android:button="@null"
            android:checked="true" />
    </RelativeLayout>
    <TextView
        android:id="@+id/remind_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:text="提醒方式"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/ring_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp"
            android:text="铃声"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/ring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_privacysetting_switch"
            android:button="@null"
            android:checked="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vibration_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.2dp"
        android:background="#fff" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp"
            android:text="振动"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/vibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_privacysetting_switch"
            android:button="@null"
            android:checked="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/private_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/textview_selector"
        android:drawableRight="@drawable/arrow_right"
        android:padding="10dp"
        android:text="隐私设置"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/passsword_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_selector"
        android:drawableRight="@drawable/arrow_right"
        android:padding="10dp"
        android:text="修改密码"
        android:textSize="16sp"
        android:layout_marginTop="0.2dp" />

    <LinearLayout
        android:id="@+id/versions_updata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.2dp"
        android:background="@drawable/textview_selector"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="版本"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/hasNewVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/red_circle"
            android:visibility="gone" />

        <TextView
            android:id="@+id/newlyVersion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center_vertical|right"
            android:text="已是最新版本"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.2dp"
        android:background="@drawable/textview_selector"
        android:drawableRight="@drawable/arrow_right"
        android:padding="10dp"
        android:text="关于"
        android:textSize="16sp" />

    <Button
        android:id="@+id/exit_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#6699ff"
        android:padding="10dp"
        android:text="退出当前账号"
        android:textColor="#fff"
        android:textSize="16sp" />

</LinearLayout>