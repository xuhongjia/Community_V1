<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imv_shopsorder_chlidlistview_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/img_dog"
                android:scaleType="centerInside" />

            <LinearLayout
                android:id="@+id/ll_shopsorder_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    style="@style/tv_shopsorder_big"
                    android:id="@+id/tv_shopsorder_chlidlistview_title"
                    android:text="iphone 6" />

                <TextView
                    style="@style/tv_shopsorder_small"
                    android:id="@+id/tv_shopsorder_chlidlistview_description"
                    android:text="附加信息 ： 土豪金"
                    android:textColor="@color/tv_smalltext_grey" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_shopsorder_chlidlistview_price"
                android:text="￥ 99.00"
                android:textSize="12sp" />

            <TextView
                style="@style/tv_shopsorder_small"
                android:id="@+id/tv_shopsorder_chlidlistview_num"
                android:layout_gravity="right"
                android:text="x 1"
                android:textColor="@color/tv_smalltext_grey" />
        </LinearLayout>
    </RelativeLayout>    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/tv_shopsorder_small"
            android:text="买家备注："
            android:textColor="#666666" />

        <TextView
            style="@style/tv_shopsorder_small"
            android:id="@+id/tv_shopsorder_chlidlistview_extra"
            android:layout_marginLeft="5dp"
            android:text="要大一点的"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="12sp" />
    </LinearLayout>
	<include layout="@layout/view_dividing_line" />
</LinearLayout>
