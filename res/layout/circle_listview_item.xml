<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_circle_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/head_portrait_pic" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_circle_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张艾琳"
                android:textColor="#4688CD" />

            <TextView
                android:id="@+id/tv_circle_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="当惯性如生锈的齿轮嵌入毫无改变的生活，慵懒就会在骨头缝隙中滋生。要强迫自己想起一些专注的人与勇敢的事，掐断前怕狼后怕虎的懦弱念想，去奋力做一些改变。找一样自己认为重要的东西，理想也好爱情也好，需要这样的东西提醒我:我不是靠活着的惯性活着的。" />

            <cn.andrewlu.community.widget.NineGridlayout
                android:id="@+id/iv_ngrid_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <cn.andrewlu.community.widget.CustomImageView
                android:id="@+id/iv_oneimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scaleType="fitStart" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_circle_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="8dp"
                    android:text="3分钟前" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_circle_isActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:drawableLeft="@drawable/circle_plus"
                        android:drawablePadding="3dp"
                        android:text="参与" />

                    <TextView
                        android:id="@+id/tv_circle_discuss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:drawableLeft="@drawable/circle_discuss"
                        android:drawablePadding="3dp"
                        android:text="评论" />

                    <TextView
                        android:id="@+id/tv_circle_good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:drawableLeft="@drawable/circle_love"
                        android:drawablePadding="3dp"
                        android:text="点赞" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ln_circle_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="#efefef"
                android:orientation="vertical" >

                <cn.andrewlu.community.ui.goods.ChildListViewOrderGoods
                    android:id="@+id/circle_comment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp" >
                </cn.andrewlu.community.ui.goods.ChildListViewOrderGoods>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>