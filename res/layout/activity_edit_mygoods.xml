<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#3399CC"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/editgoods_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/drawable_arrow_selector" />

        <TextView
            android:id="@+id/editgoods_title"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="编辑商品"
            android:textColor="#fff"
            android:textSize="16sp" />
    </FrameLayout>
    
<ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#efefef"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        android:orientation="vertical">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            
             <android.support.v4.view.ViewPager
                    android:id="@+id/edit_mygoods_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff" >
                </android.support.v4.view.ViewPager>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:background="#fff">

            <EditText
                android:id="@+id/editgoods_goodstitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:hint="输入商品标题"
                android:layout_marginLeft="10dp"/>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#E8E8E8"
                android:layout_marginLeft="10dp"/>
            
			 <LinearLayout
			    android:id="@+id/editgoods_category"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="类目"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/editgoods_category_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:textColor="#222"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:src="@drawable/arrow_right" />

            </LinearLayout>
            
        </LinearLayout>

 
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="价格"
                    android:textColor="#000"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/editgoods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:textColor="#222"
                    android:textSize="14sp" 
                    android:inputType="numberDecimal"
                    android:hint="￥"
                    android:gravity="right|center"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#E8E8E8" 
                android:layout_marginLeft="10dp"/>

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="库存"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editgoods_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:textColor="#222"
                    android:textSize="14sp" 
                    android:inputType="number" 
                    android:hint=""
                    android:gravity="right|center"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#E8E8E8"
                android:layout_marginLeft="10dp" />

  <LinearLayout
                android:id="@+id/editgoods_extra"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="附加信息"
                    android:textColor="#000"
                    android:textSize="16sp" 
                    />
                <TextView
                    android:id="@+id/editgoods_extra_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#222"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/arrow_right"
                    android:layout_marginRight="5dp"
                    />

            </LinearLayout>
      
            

        </LinearLayout>
        
        <LinearLayout
                android:id="@+id/editgoods_description"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
               android:background="#fff"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="宝贝描述"
                    android:textColor="#000"
                    android:textSize="16sp" 
                    />
                 <TextView
                    android:id="@+id/editgoods_description_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#222"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/arrow_right"
                    android:layout_marginRight="5dp"
                    />

            </LinearLayout>
      

    </LinearLayout>
</ScrollView>
 <RadioGroup
        android:id="@+id/editgoods_group"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
            <RadioButton
                android:id="@+id/editgoods_off"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="放入仓库"
                android:gravity="center"
                android:textColor="#fff"
                android:background="@drawable/add_goods_radiobtn"
                />
        <RadioButton
            android:id="@+id/editgoods_on"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="立即发布"
            android:gravity="center"
            android:textColor="#fff"
            android:background="@drawable/add_goods_radiobtn"
            />
       
    </RadioGroup>
</LinearLayout>
