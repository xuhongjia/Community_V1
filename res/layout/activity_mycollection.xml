<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#3399CC"
        android:orientation="horizontal" >
	 <ImageView
            android:id="@+id/mycollection_back"
            android:padding="10dp"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:src="@drawable/pressed_arrow_left"
            />


    <TextView android:id="@+id/mycollection_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="我的收藏"
        android:textColor="#fff"
        android:textSize="16sp" />

        <Button
            android:id="@+id/mycollection_BtnEditor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/drawable_next_selector"
            android:padding="10dp"
            android:text="编辑"
            android:textColor="#fff"
            android:textSize="16sp" />

    </FrameLayout>
    <ListView
        android:id="@+id/mycollection_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#dcdcdc"
        android:dividerHeight="0.2dp"/>

</LinearLayout>