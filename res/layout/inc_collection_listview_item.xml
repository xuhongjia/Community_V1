<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/collection_thumb"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/iphone"
            android:padding="5dp">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/collection_depict"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="超级IPHONE6S，只用了五年"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="left|bottom">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/collection_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/time"
                    android:text="7-21"
                    android:textSize="11sp"
                    android:gravity="left|center"
                    android:drawablePadding="5dp"
                    >

                </TextView>

                <TextView
                    android:id="@+id/collection_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/location_gd"
                    android:textSize="11sp"
                    android:text="雅美公寓"
                    android:gravity="left|center"
                    android:drawablePadding="5dp"
                   >

                </TextView>

                <TextView
                    android:id="@+id/collection_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/crown"
                    android:textSize="11sp"
                    android:text="一口价"
                    android:gravity="left|center"
                    android:drawablePadding="5dp"
                   >

                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/collection_sellPrice"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="300元"
                android:textColor="#ff0000"
                android:gravity="left|center">

            </TextView>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>